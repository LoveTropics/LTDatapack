{
  "type": "ltminigames:donation_package",
  "id": "$id",
  "package_type": "sabotage_package",
  "category": "small",
  "player_select": "all",
  "name": {"translate": "$name"},
  "description": {"translate": "$description"},
  "donation_amount": 20.0,
  "notification": {
    "message": {
      "translate": "$toast",
      "color": "light_purple"
    },
    "icon": {"item": "$icon"},
    "sentiment": "neutral",
    "sound": "ltminigames:sabotage_receive"
  },
  "receive_actions": {
    "type": "ltminigames:apply_for_time",
    "apply": {
      "target": "participants",
      "actions": {
        "type": "ltminigames:set_disguise",
        "entity": "$entity"
      }
    },
    "clear": {
      "target": "all",
      "actions": {
        "type": "ltminigames:clear_disguise",
        "entity": "$entity"
      }
    },
    "seconds": 120
  }
}