{
  "name": {"translate": "ltminigames.minigame.turtle_race"},
  "subtitle": "Standard 2 Lap - LT21",
  "icon": "ltminigames:textures/gui/minigames/turtle_race/turtle_icon_1.png",

  "statistics_key": "race_standard_21",
  "map": {
    "type": "ltminigames:load_map",
    "load_from": "lt:turtle_race_21",
    "dimension": "lt:turtle_race_21",
    "dimension_type": "tropicraft:tropics"
  },
  "minimum_participants": 4,
  "maximum_participants": 32,
  "behaviors": [
    {
      "type": "lt:common/playing",
      "game_type": "adventure",
      "join_late_with_role": "spectator"
    },
    {
      "type": "ltminigames:force_load_region",
      "region": "force_load"
    },
    {
      "type": "ltminigames:position_players",
      "all": ["spawn"]
    },
    {
      "type": "ltminigames:general_events",
      "ready": {
        "type": "ltminigames:run_commands",
        "global": [
          "function lt:game/party/race_standard/init",
          "function lt:game/party/race_standard/settings"
        ]
      },
      "start": {
        "type": "ltminigames:run_commands",
        "global": "function lt:game/party/race_standard/start"
      },
      "player_participate": {
        "type": "ltminigames:run_commands",
        "player": "function lt:game/party/race_standard/player/join_competitor"
      },
      "player_spectate": {
        "type": "ltminigames:run_commands",
        "player": "function lt:game/party/race_standard/player/join_spectator"
      },
      "player_remove": {
        "type": "ltminigames:run_commands",
        "player": "function lt:game/party/race_standard/player/leave"
      },
      "stop": {
        "type": "ltminigames:run_commands",
        "global": "function lt:game/party/race_standard/deinit"
      }
    },
    "ltminigames:spectator_chase",
    {
      "type": "ltminigames:bind_controls",
      "admins": {
        "eliminate": {
          "type": "ltminigames:eliminate_player"
        }
      }
    },
    "ltminigames:cancel_player_damage",
    {
      "type": "ltminigames:set_client_state",
      "state": {
        "type": "ltminigames:replace_textures",
        "textures": {
          "boss_bars": "ltminigames:textures/gui/minigames/turtle_race/bars.png"
        }
      }
    }
  ]
}
